<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <EditText
        android:id="@+id/edit_text_item_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Item Name"
        android:layout_marginBottom="8dp"/>

    <Spinner
        android:id="@+id/spinner_item_category"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Item Category"
        android:layout_below="@id/edit_text_item_name"
        android:layout_marginBottom="8dp"/>

    <EditText
        android:id="@+id/edit_text_item_price"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Item Price"
        android:layout_below="@id/spinner_item_category"
        android:layout_marginBottom="8dp"/>

    <ImageView
        android:id="@+id/image_view_item"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:src="@drawable/cmulogo"
        android:layout_below="@id/edit_text_item_price"

        android:layout_marginBottom="16dp"/>

    <Button
        android:id="@+id/button_add_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add Item"
        android:layout_below="@id/image_view_item"
        android:layout_centerHorizontal="true"/>
</RelativeLayout>
